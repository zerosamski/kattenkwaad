<% var querycard = 0 %>
    <div class="row">
    <% sitters.forEach(function(sitter) { %>
        <div class="col-md-4">
            <div class="card <%=querycard%>">
                <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
                <div class="avatar">
                    <img src="../../images/<%=sitter.gebruikersnaam%>.jpg" onerror="this.onerror=null;this.src='../../images/default.png';" alt="" />
                </div>
                <div class="content">
                <br>
                    <p><strong><%=sitter.naam%> </strong><br>
                       <ul class="list-group" id="theList">
						<li class="list-group-item"><strong class="text-muted">Woonplaats</strong></span> <%=sitter.woonplaats%></li>
						<li class="list-group-item"><strong class="text-muted">Maximale reisafstand</strong></span> <%=sitter.reizen%> km</li>
						<li class="list-group-item"><strong class="text-muted">Uurtarief</strong></span> <span class="uurtarief"> <%=sitter.uurtarief%></span> €</li>
						<li class="list-group-item"><strong class="text-muted">Km vergoeding </strong></span><%=sitter.kmvergoeding%>€ per km </li>
						<li class="list-group-item"><strong class="text-muted">Referenties beschikbaar? </strong></span> <%=sitter.referenties%> </li>
						<li class="list-group-item"><strong class="text-muted">Ervaring? </strong></span> <%=sitter.ervaring%> </li>
					</ul>
                    <br>
                    <p><a href="/oppassers/<%=sitter.id%>" role="button" class="btn btn-secondary">Bekijk</a></p>
                </div>
            </div>
        </div>
		<% querycard++ %>
        <%})%>
    </div>
