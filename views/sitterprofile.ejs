	<body> 
		<div class="profile">
			<hr>
			<div class="container target">
    		<div class="row">
        		<div class="col-sm-10">
            		<h1><%=sitter.naam%></h1>
					<br>
					<br>
        			<a href="mailto:<%=sitter.email%>?body=Dit bericht is verstuurd via Kattenkwaad&amp;subject=Bericht van Kattenkwaad" role="button" class="btn btn-info">Neem contact op!</a>
					<br>
        		</div>
	  			<div class="col-sm-2"><img class="img-circle img-responsive profilepic" src="../../images/<%=sitter.gebruikersnaam%>.jpg" onerror="this.onerror=null;this.src='../../images/default.png';">
				</div>
    		</div>
			<br>

			<div class="row">
				<!--left column-->
				<div class="col-sm-3">
					<ul class="list-group">
						<li class="list-group-item"><strong>Algemene informatie</strong></li>
						<li class="list-group-item"><strong class="text-muted">Woonplaats</strong></span> <%=sitter.woonplaats%></li>
						<li class="list-group-item"><strong class="text-muted">Maximale reisafstand</strong></span> <%=sitter.reizen%> km</li>
						<li class="list-group-item"><strong class="text-muted">Uurtarief</strong></span> <%=sitter.uurtarief%> €</li>
						<li class="list-group-item"><strong class="text-muted">Km vergoeding </strong></span> <%=sitter.kmvergoeding%>€ per km </li>
						<li class="list-group-item"><strong class="text-muted">Referenties beschikbaar? </strong></span> <%=sitter.referenties%> </li>
						<li class="list-group-item"><strong class="text-muted">Ervaring? </strong></span> <%=sitter.ervaring%> </li>
					</ul>
					<br>
				</div>

				<!--right column-->
				<div class="col-sm-9">
					<div>
						<div>
							<h4>Over mij<h4>
						</div>
						<div>
							<%=sitter.biografie%>
						</div>
						<br>
					</div>
					<div>
						<div>
							<h4>Werkwijze<h4>
						</div>
						<div>
							<%=sitter.werkwijze%>
						</div>
						<br>
					</div>
					<div>
						<div>
							<h4>Voorwaarden<h4>
						</div>
						<div>
							<%=sitter.voorwaarden%>
						</div>
						<br>
					</div>
					<%if (sitter.overig) { %>
						<div>
							<h4>Overig<h4>
						</div>
						<div>
							<%=sitter.overig%>
						</div>
					<%}%>
				</div>

					
						
					
				
				
		</div>
	</div>

	

